@code {
    private TripDto? trip;
    private List<string> selectedSeats = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isProcessing = false;
    private ReservationDto? completedReservation;

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(Nav.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);

        var tripId = query.GetValueOrDefault("tripId").ToString();
        var seatsParam = query.GetValueOrDefault("seats").ToString();

        if (string.IsNullOrWhiteSpace(tripId) || string.IsNullOrWhiteSpace(seatsParam))
        {
            errorMessage = "Geçersiz rezervasyon bilgileri.";
            return;
        }

        trip = await TripService.GetTripByIdAsync(tripId);
        if (trip is null)
        {
            errorMessage = "Sefer bulunamadı.";
            return;
        }

        selectedSeats = seatsParam.Split(',', StringSplitOptions.RemoveEmptyEntries).ToList();
        if (!selectedSeats.Any())
        {
            errorMessage = "Koltuk seçimi yapılmamış.";
            return;
        }

        await LoadStoredReservationIfExists();
    }

    private async Task LoadStoredReservationIfExists()
    {
        var storedReservation = await LocalStorage.GetItem<ReservationDto>("lastReservation");
        if (storedReservation is null || trip is null)
        {
            return;
        }

        var seatComparer = StringComparer.OrdinalIgnoreCase;
        var selectedSet = new HashSet<string>(selectedSeats, seatComparer);
        var storedSet = new HashSet<string>(storedReservation.Seats, seatComparer);

        if (storedReservation.TripId == trip.Id && selectedSet.SetEquals(storedSet))
        {
            completedReservation = storedReservation;
            selectedSeats = storedReservation.Seats;
            successMessage = $"Rezervasyonunuz hazır. Rezervasyon kodunuz: {storedReservation.ReservationCode}";
        }
        else
        {
            await LocalStorage.RemoveItem("lastReservation");
        }
    }

    private async Task OnSubmitValid(PassengerForm.Passenger passenger)
    {
        if (trip is null || !selectedSeats.Any() || isProcessing) return;

        isProcessing = true;
        errorMessage = null;
        successMessage = null;
        completedReservation = null;

        try
        {
            var reservation = new ReservationDto
            {
                TripId = trip.Id,
                Seats = selectedSeats,
                PassengerName = passenger.FirstName,
                PassengerSurname = passenger.LastName,
                Email = passenger.Email,
                TCKimlik = passenger.TCKimlik,
                Phone = passenger.Phone
            };

            var createdReservation = await ReservationService.CreateReservationAsync(reservation);

            if (createdReservation is null)
            {
                errorMessage = "Rezervasyon oluşturulurken bir hata oluştu.";
                isProcessing = false;
                return;
            }

            // localStorage'a kaydet
            await LocalStorage.SetItem("lastReservation", createdReservation);

            completedReservation = createdReservation;
            selectedSeats = createdReservation.Seats;
            successMessage = $"Rezervasyonunuz başarıyla oluşturuldu. Rezervasyon kodunuz: {createdReservation.ReservationCode}";
            isProcessing = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Hata: {ex.Message}";
            isProcessing = false;
        }
    }

    private void GoToTrips() => Nav.NavigateTo("/trips");
    private void GoBackToSeats()
    {
        if (trip is not null)
        {
            Nav.NavigateTo($"/trips/{trip.Id}/seats");
        }
    }
}
