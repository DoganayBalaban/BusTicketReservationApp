        color: #6c757d;
    }

    .trip-summary p strong {
        color: #212529;
    }

    .passenger-form-container {
        background-color: #fff;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1.5rem;
    }

    .passenger-form-container h4 {
        margin-top: 0;
        margin-bottom: 1.5rem;
        color: #212529;
    }

    .alert {
        padding: 1rem;
