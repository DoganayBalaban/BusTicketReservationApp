@page "/checkout"
@inject NavigationManager Nav
@inject TripService TripService
@inject ReservationService ReservationService
@inject LocalStorageService LocalStorage

@if (trip is null)
{
    <p>Yükleniyor...</p>
}
else
{
    <div class="checkout-container">
        @if (completedReservation is null)
        {
            <div class="form-actions form-actions-top">
                <button class="btn btn-secondary" @onclick="GoBackToSeats">← Koltuk Seçimine Dön</button>
            </div>
        }

        <h3>Rezervasyon Bilgileri</h3>

        <div class="trip-summary">
            <h4>Sefer Bilgileri</h4>
            <p><strong>Firma:</strong> @trip.Company</p>
            <p><strong>Güzergah:</strong> @trip.DepartureCity → @trip.ArrivalCity</p>
            <p><strong>Kalkış:</strong> @trip.DepartureTime.ToString("dd.MM.yyyy HH:mm")</p>
            <p><strong>Seçilen Koltuklar:</strong> @string.Join(", ", selectedSeats)</p>
            <p><strong>Toplam Tutar:</strong> @((selectedSeats.Count * trip.Price).ToString("N2")) ₺</p>
        </div>

        @if (completedReservation is null)
        {
            <div class="passenger-form-container">
                <h4>Yolcu Bilgileri</h4>
                <PassengerForm OnSubmitValid="OnSubmitValid" />
            </div>
        }
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

@if (completedReservation is not null)
{
    <div class="reservation-summary">
        <h4>Rezervasyon Özeti</h4>
        <div class="summary-grid">
            <div>
                <h5>Rezervasyon</h5>
                <p><strong>Kod:</strong> @completedReservation.ReservationCode</p>
                <p><strong>Bilet Alım Tarihi:</strong> @completedReservation.ReservationDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</p>
                
            </div>
            <div>
                <h5>Yolcu</h5>
                <p><strong>Ad Soyad:</strong> @completedReservation.PassengerName @completedReservation.PassengerSurname</p>
                <p><strong>E-posta:</strong> @completedReservation.Email</p>
                <p><strong>Telefon:</strong> @completedReservation.Phone</p>
                <p><strong>TC Kimlik:</strong> @completedReservation.TCKimlik</p>
            </div>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        <p>@successMessage</p>
        <button class="btn btn-primary" @onclick="GoToTrips">Seferlere Geri Dön</button>
    </div>
}

